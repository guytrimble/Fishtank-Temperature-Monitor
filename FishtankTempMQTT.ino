// connect to WiFi
void setup_wifi() {
  delay(10);
  Serial.print("\nConnecting to ");
  Serial.println(ssid);

  WiFi.mode(WIFI_STA);
  WiFi.begin(ssid, password);

  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.print(".");
  }
  randomSeed(micros());
  Serial.println("\nWifi connected\nIP address: ");
  Serial.println(WiFi.localIP());
}

// Connect to MQTT Broker
void reconnect() {
  // Loop until connected
  while (!client.connected()) {
    Serial.print("Attempting MQTT connection...");
    String clientId{ "ESP8266Client-" };  // create a random client ID
    clientId += String(random(0xffff), HEX);
    // Attempt to connect
    if (client.connect(clientId.c_str(), mqtt_username, mqtt_password)) {
      Serial.println("connected");

    } else {
      Serial.print("failed, rc=");
      Serial.print(client.state());
      Serial.println(" try again in 5 seconds");  // Wait 5 seconds before retrying
      delay(5000);
    }
  }
}

// Publish MQTT Message
void publishMessage(const char* topic, String payload, boolean retained) {
  if (client.publish(topic, payload.c_str(), true)) {
    Serial.println("Message published [" + String(topic) + "]: " + payload);
  } else {
    Serial.println("Error publishing message [" + String(topic) + "]: " + payload);
  }
}

OneWire onewire(one_wire_bus);

DallasTemperature sensors(&onewire);

void setup() {
  // put your setup code here, to run once:

  // initializes communication with temperature sensor
  Serial.begin(115200);
  sensors.begin();

  // calls function to set up WiFi
  setup_wifi();

  // Allows insecure communication with MQTT broker
  espClient.setInsecure();

  // Sets MQTT server
  client.setServer(mqtt_server, mqtt_port);
}

void loop() {
  // put your main code here, to run repeatedly:

  // check if client is connected
  if (!client.connected()) {
    reconnect();
  }
  client.loop();

  double temp_f = 1.1;
  sensors.requestTemperatures();
  temp_f = sensors.getTempFByIndex(0);
  Serial.print(temp_f);

  // publish temperature reading
  publishMessage("esp8266_temperature", String(temp_f), true);

  delay(50000);
}
